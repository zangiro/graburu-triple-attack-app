<% content_for(:title, t(".page_title")) %>


<div class="container">
  <div class="row">
    <div class="col-md-10 col-lg-8 mx-auto">
      <h1><%= t(".user_registration") %></h1>
      <%# ---------補足: registration 登録--------- %>

      <%= form_with model: @user do |f| %>
        <%= render 'shared/error_messages', object: f.object %>

        <div class="mb-3">
          <%= f.label :name, t(".name_required"), class: "form-label" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :email, t(".email_required"), class: "form-label" %>
          <%= f.email_field :email, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :password, t(".password_required"), class: "form-label" %>
          <%= f.password_field :password, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :password_confirmation, t(".password_confirmation_required"), class: "form-label" %>
          <%= f.password_field :password_confirmation, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :agree_terms, t(".accept_terms_of_use") %>
          <%= f.check_box :agree_terms %>
          <%# ---------補足: agree_terms 利用規約, accept_terms_of_use 利用規約に同意しますか？--------- %>
        </div>

        <div class="mb-3">
          <%= link_to t(".agree_terms"), terms_path %>
          <%= link_to t(".privacy_policy"), policy_path %>
        </div>

        <%= f.submit t("helpers.submit.create"), class: "btn btn-primary" %>

      <% end %>

      <%# ---------↓googleログイン部分--------- %>

      <hr class="my-4">

      <div class="d-flex justify-content-center">
        <div>

          <div class="mb-3">
            <h5><%= t(".or_register_with_your_google_account") %></h5>
          </div>

          <div>
            <%= link_to auth_at_provider_path(provider: :google) do %>
              <%= image_tag "sign_up@2x.png" %>
            <% end %>
          </div>

        </div>
      </div>

      <hr class="my-4">

      <%# ---------googleログイン部分--------- %>

      <div class='text-center'>
        <%= link_to t(".to_login_page"), login_path %>
        <%= link_to t(".to_top_page"), root_path %>
      </div>
    </div>
  </div>
</div>